                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:layout_weight="10"
                       />
