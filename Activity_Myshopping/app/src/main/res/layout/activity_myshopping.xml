<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="My Shopping"
            android:fontFamily="serif-monospace"
            android:textColor="#FFFFAAAA"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="4"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#FFFFAABB"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Shopping_button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1일"
            android:onClick="Shopping_Button1"/>
        <Button
            android:id="@+id/Shopping_button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1주일"
            android:onClick="Shopping_Button2"/>
        <Button
            android:id="@+id/Shopping_button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1개월"
            android:onClick="Shopping_Button3"/>
        <Button
            android:id="@+id/Shopping_button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3개월"
            android:onClick="Shopping_Button4"/>
        <Button
            android:id="@+id/Shopping_button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6개월"
            android:onClick="Shopping_Button5"/>
        <Button
            android:id="@+id/Shopping_button6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="그이전"
            android:onClick="Shopping_Button6"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/Topcontainer">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
        <TextView
            android:id="@+id/Shopping_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="아직 구매내역이 존재하지 않습니다."
            android:gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffbbaa"
            android:textSize="12sp"
            android:id="@+id/main_storeButton"
            android:text="store"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/main_celebStyleButton"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffbbaa"
                android:textSize="12sp"
                android:gravity="bottom|center"
                android:text="celeb"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffbbaa"
                android:textSize="12sp"
                android:gravity="top|center"
                android:text="style"/>
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffbbaa"
            android:textSize="12sp"
            android:id="@+id/main_searchButton"
            android:text="search"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/main_reformShopButton"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffbbaa"
                android:textSize="12sp"
                android:gravity="bottom|center"
                android:text="reform"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffbbaa"
                android:textSize="12sp"
                android:gravity="top|center"
                android:text="shop"/>
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffbbaa"
            android:textSize="12sp"
            android:id="@+id/main_myPageButton"
            android:text="my page"/>
    </LinearLayout>
</LinearLayout>